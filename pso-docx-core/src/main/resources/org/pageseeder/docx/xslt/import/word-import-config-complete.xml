<?xml version="1.0"?>

<!-- 

WARNING: this is not a valid configuration file, it is only used for reference purposes.
This xml is used to configure the transformation of openxml into psml.
In this configuration file are all of the accepted values for each option.
in brackets [] are all of the options that have no defined value. Below is a quick explanation of them:

1. [valid word style id]: means the w:styleId value of each style. In word, the w:name/@w:val is shown. 
   The Id is used in the conversion as it is the only one that we are sure to be unique. Check example bellow:

	<w:style w:type="paragraph" w:default="1" w:styleId="Normal">
	    <w:name w:val="Normal"/>
	    <w:qFormat/>
	    <w:rsid w:val="000D2155"/>
	    <w:pPr>
	      <w:spacing w:after="200" w:line="276" w:lineRule="auto"/>
	    </w:pPr>
	    <w:rPr>
	      <w:rFonts w:asciiTheme="minorHAnsi" w:eastAsiaTheme="minorHAnsi" w:hAnsiTheme="minorHAnsi" w:cstheme="minorBidi"/>
	      <w:sz w:val="22"/>
	      <w:szCs w:val="22"/>
	      <w:lang w:eastAsia="en-US"/>
	    </w:rPr>
	  </w:style>

2. [label value]: means a valid value for a psml block or inline label. 
   Currently it must match the following Regular Expression: [a-zA-Z0-9_\-]+
   Check https://dev.pageseeder.com/api/data/psml.html for more information 

3. [regular expression]: means a valid regular expression. 
   Check http://www.w3.org/TR/xpath-functions/#regex-syntax for more information
   
   
@author Hugo Inacio 
@copyright Allette Systems Pty Ltd 

-->

<config version="0.4.24">
	<!-- =======================SPLIT PROPERTIES======================= -->
	<split>
  <!-- ############ NEW ############## -->
	<mathml select="true|false" output="generate-files|generate-fragments" convert-to-mml="true"/>
	<footnotes select="true|false" output="generate-files|generate-fragments"/>
	<endnotes select="true|false" output="generate-files|generate-fragments"/>
		
    <main>
      <type>[name of type]</type>
      <label>[comma separated list of labels]</label>
    </main>
    <!-- ############ END NEW ############## -->
		<!-- Do not split at document level -->
    
		<document select="false"/>                                          <!-- Test: document-split-document-false -->
		<!-- Do not split at section level -->
    <!-- Test: section-split-document-false -->
		<section select="false"/>
		<!-- Split at document level using generated titles -->
    <!-- Test: section-split-document-false -->
    <!-- ############ NEW ############## -->
		<document select="true" use-real-titles="false">
    <!-- ############ END NEW ############## -->
			<!-- Split at outline levels -->
			<outlinelevel select="0"/>
			<outlinelevel select="1"/>
			<outlinelevel select="2"/>
			<outlinelevel select="3"/>
			<outlinelevel select="4"/>
			<outlinelevel select="5"/>
			<outlinelevel select="6"/>
			<outlinelevel select="7"/>
			<outlinelevel select="8"/>
			<outlinelevel select="0-8"/>
			<!-- Split at matching paragraph style -->
			<wordstyle select="[valid word style id]" >
				<label>[name of label]</label>
				<type>[name of type]</type>
				<level value="[0-9]"/>
			</wordstyle>
		</document>
    <!-- Split at document level using content titles -->
    <!-- ############ NEW ############## -->
    <document select="true" use-real-titles="true">
    <!-- ############ END NEW ############## -->
      <!-- Split at outline levels -->
      <outlinelevel select="0"/>
      <outlinelevel select="1"/>
      <outlinelevel select="2"/>
      <outlinelevel select="3"/>
      <outlinelevel select="4"/>
      <outlinelevel select="5"/>
      <outlinelevel select="6"/>
      <outlinelevel select="7"/>
      <outlinelevel select="8"/>
      <outlinelevel select="0-8"/>
      <!-- Split at matching paragraph style -->
      <wordstyle select="[valid word style id]" >
        <label>[name of label]</label>
        <type>[name of type]</type>
        <level value="[0-9]"/>
      </wordstyle>
    </document>
		<!-- Split at section level -->
		<section select="true">
			<!-- Split at outline levels -->
			<outlinelevel select="0"/>
			<outlinelevel select="1"/>
			<outlinelevel select="2"/>
			<outlinelevel select="3"/>
			<outlinelevel select="4"/>
			<outlinelevel select="5"/>
			<outlinelevel select="6"/>
			<outlinelevel select="7"/>
			<outlinelevel select="8"/>
			<outlinelevel select="0-8"/>
			<!-- Split at matching paragraph style -->
			<wordstyle select="[valid word style id]" >
				<type>[name of type]</type>
			</wordstyle>
      <bookmark select="[valid string]" >
        <type>[name of type]</type>
      </bookmark>
      <protectedsection select="true|false" id="test"/>
		</section>
	</split>

	<lists>
		<!-- Do not add numbering, if exists to document title -->
		<add-numbering-to-document-titles select="false"/>
		<!-- Add numbering, if exists to document title -->
		<add-numbering-to-document-titles select="true"/>
		<!-- Do not convert each list style to a list role -->
		<convert-to-list-roles select="false"/>
		<!-- Convert each list style to a list role -->
		<convert-to-list-roles select="true"/>
		<!-- Do not convert list style to numbered paragraph -->
		<convert-to-numbered-paragraphs select="false"/>
		<!-- Convert list style to numbered paragraph -->
		<convert-to-numbered-paragraphs select="true">
			<!-- Convert list style level to prefix -->
			<level value="1" output="prefix" />
			<level value="2" output="prefix" />
			<level value="3" output="prefix" />
			<level value="4" output="prefix" />
			<level value="5" output="prefix" />
			<level value="6" output="prefix" />
			<!-- Convert list style level to numbering attribute -->
			<level value="1" output="numbering" />
			<level value="2" output="numbering" />
			<level value="3" output="numbering" />
			<level value="4" output="numbering" />
			<level value="5" output="numbering" />
			<level value="6" output="numbering" />
			<!-- Convert list style level to text value -->
			<level value="1" output="text" />
			<level value="2" output="text" />
			<level value="3" output="text" />
			<level value="4" output="text" />
			<level value="5" output="text" />
			<level value="6" output="text" />
			<!-- Convert list style level to inline value -->
			<level value="1" output="inline=[label value]" />
			<level value="2" output="inline=[label value]" />
			<level value="3" output="inline=[label value]" />
			<level value="4" output="inline=[label value]" />
			<level value="5" output="inline=[label value]" />
			<level value="6" output="inline=[label value]" />
		</convert-to-numbered-paragraphs>
		<!-- Do not convert manual numbering -->
		<convert-manual-numbering select="false"/>
		<convert-manual-numbering select="true">
			<!-- Convert manual numbering -->
			<value match="[regular expression]">
				<!-- Convert manual numbering to inline label -->
				<inline label="[label value]" />
				<!-- Convert manual numbering to prefix attribute -->
				<prefix />
				<!-- Convert manual numbering to numbering attribute -->
				<autonumbering/>
			</value>
		</convert-manual-numbering>
	</lists>

	<!-- =======================STYLE PROPERTIES======================= -->


	<styles>
		<!-- List of ignore paragraph/ character styles to ignore in processing -->
		<ignore>
			<wordstyle value="[valid word style id]" />
		</ignore>
		<default>
			<!-- By default, paragraph styles will generate a block label -->
			<paragraphStyles value="block" />
			<!-- By default, paragraph styles will generate a para -->
			<paragraphStyles value="para" />
			<!-- By default, character styles will generate a inline label -->
			<characterStyles value="inline" />
			<!-- By default, character styles will generate text -->
			<characterStyles value="none" />
			<!-- By default, keep smart tags as inline labels -->
			<smart-tag keep="true" />
			<!-- By default, ignore smart tags, only keeping it's text -->
			<smart-tag keep="false" />
		</default>

		<!-- Generate a heading with a paragraph style -->
		<wordstyle name="[valid word style id]" psmlelement="heading">
			<!-- Generate a heading level for each paragraph style -->
			<level value="1" />
			<level value="2" />
			<level value="3" />
			<level value="4" />
			<level value="5" />
			<level value="6" />
			<!-- If paragraph style is numbered, generate a inline label for the numbering value -->
			<numbering select="true" value="inline">
				<label value="[label value]"/> 
			</numbering>
			<!-- If paragraph style is numbered, generate a text value for the numbering value -->
			<numbering select="true" value="text"/>
			<!-- If paragraph style is numbered, generate a prefix attribute for the numbering value -->
			<numbering select="true" value="prefix"/>
			<!-- If paragraph style is numbered, generate a numbering attribute set to true -->
      <numbering select="true" value="numbering"/>
      <!-- wrap the heading in a block label -->
			<label type="block" value="[label value]" />
			<!-- wrap the text inside of the heading in a inline label -->
			<label type="inline" value="[label value]" />
		</wordstyle>
		<!--  Convert the word paragraph or character style into a inline label -->
		<wordstyle name="[valid word style id]" psmlelement="inline">
			<label value="[label value]"/>
		</wordstyle>
		<!--  Convert the word paragraph or character style into a block label -->
		<wordstyle name="[valid word style id]" psmlelement="block">
			<label value="[label value]"/>
		</wordstyle>
		<!--  Convert the word paragraph or character style into a monospace -->
		<wordstyle name="[valid word style id]" psmlelement="monospace"/>
		<!--  Convert the word paragraph or character style into a para -->
		<wordstyle name="[valid word style id]" psmlelement="para" >
			<indent value="1" />
			<indent value="2" />
			<indent value="3" />
			<indent value="4" />
			<indent value="5" />
			<indent value="6" />
			<label type="block" value="[label value]" />
			<label type="inline" value="[label value]" />
			<numbering select="true" value="inline">
				<label value="[label value]"/> 
			</numbering>
			<numbering select="true" value="text"/>
			<numbering select="true" value="prefix"/>
			<numbering select="true"/>
		</wordstyle>
		<!--  Convert the word paragraph or character style into a preformat -->
		<wordstyle name="[valid word style id]" psmlelement="preformat"/>

		<wordstyle name="[valid word style id]" psmlelement="caption" table="default"/>

		<wordstyle name="[valid word style id]" psmlelement="caption" table="[valid word table style id]"/>

	</styles>

</config>
