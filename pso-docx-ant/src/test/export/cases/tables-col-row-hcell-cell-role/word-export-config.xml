<?xml version="1.0"?>

<config>
	<elements>
		<tables>
			<!-- Tables -->
			<table role="table1" tablestyle="PS Table">
				<width type="pct" value="80%"/>
			</table>

			<!-- Columns -->
      <col role="col1">
				<shading fill="00FF00" />
			  <borders value="top" />
			</col>
			<col role="col2">
				<borders value="top,bottom" />
			</col>
			<col role="col3">
				<borders value="top,bottom,start" />
			</col>
			<col role="col4">
			  <borders value="top,bottom,start,end" />
		  </col>

			<!-- Rows -->
			<row role="row1" align="center">
				<shading fill="FF0000" />
				<borders value="top" />
				<height type="atleast" value="1000"/>
			</row>
			<row role="row2" align="start">
				<borders value="top,bottom" />
				<height type="exact" value="1000"/>
			</row>
			<row role="row3" align="end" cantsplit="true">
				<borders value="top,bottom,start" />
			</row>
			<row role="row4" cantsplit="false">
				<borders value="top,bottom,start,end" />
			</row>

			<!-- HCells -->
			<hcell role="hcell1" valign="bottom">
				<shading fill="0000FF" />
				<borders value="top" />
				<width type="pct" value="30%"/>
			</hcell>
			<hcell role="hcell2" valign="center">
				<borders value="top,bottom" />
				<width type="dxa" value="1000"/>
			</hcell>
			<hcell role="hcell3" valign="top">
				<borders value="top,bottom,start" />
				<width type="auto" />
			</hcell>
			<hcell role="hcell4">
				<borders value="top,bottom,start,end" />
				<width type="auto" />
			</hcell>

			<!-- Cells -->
			<cell role="cell4" valign="bottom">
				<shading fill="0000FF" />
				<borders value="top" />
				<width type="pct" value="30%"/>
			</cell>
			<cell role="cell3" valign="center">
				<borders value="top,bottom" />
				<width type="dxa" value="1000"/>
			</cell>
			<cell role="cell2" valign="top">
				<borders value="top,bottom,start" />
				<width type="auto" />
			</cell>
			<cell role="cell1">
				<borders value="top,bottom,start,end" />
				<width type="auto" />
			</cell>
		</tables>
	</elements>
</config>
